package com.bank.utility;

import java.util.ArrayList;
import java.util.Scanner;

import com.bank.entity.Account;
import com.bank.entity.Customer;
import com.bank.service.MisService;
import com.bank.service.Service;

public class BankUtility {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		ArrayList<Account> accountList = new ArrayList<Account>();
		Customer customer = null;
		char choice;
		do
		{
			System.out.println("******************Welcome To Bank************");
			System.out.println("1.Create Account 2.Deposit Money 3. Display Account Details 4.Withdraw Money \n Enter your Choice");
			//System.out.println("1.Create Account 2.Manage Account 3. Display Account 4. Exit");
			int mainChoice = scanner.nextInt();
			switch(mainChoice)
			{
				case 1: String customerAccountChoice = MisService.enterAccountChoice();
						accountList.add(Service.createAccount(customerAccountChoice));
						customer = Service.createCustomer(accountList);
						System.out.println("Account Created by"+customer.getCustomerName());
						break;
				case 2: System.out.println(" available account");
						System.out.println("Savings Max Account \n Current Account \n  Loan Account \n Enter your Choice");
						System.out.println("1.Deposit Money  2.Withdraw Money 3.Acount Details\n Enter your Choice")
						int availableChoice = scanner.nextInt();
						switch(availableChoice)
						{
						case 1: Service.depositMoney(customer);
							break;
						case 2: Service.withdrawAmount(customer);
						break;
						}
					
					Service.depositMoney(customer);
						break;
				//case2: manageAccount()
				case 3: Service.displayAccountDetails(accountList);
				break;
				case 4: System.exit(0);
				case 4: Service.withdrawAmount(customer);
				
			}
			System.out.println("Do you want to continue(y/n) : - ");
			choice = scanner.next().charAt(0);
			
		}
		while(choice == 'y');
		

	}


	
	

	

}
